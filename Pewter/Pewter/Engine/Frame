#ifndef __PEWTER_ENGINE_FRAME
#define __PEWTER_ENGINE_FRAME

#include <Pewter/Display/Buffer>
#include <Pewter/Display/View>
#include <Pewter/Engine/Input>

namespace pewter::engine {
    struct Frame
    {
        display::View * view;

        Frame (display::View *);

        virtual void update ()          = 0;
        virtual Input wait_for_input () = 0;
    };
}

#endif /* !@__PEWTER_ENGINE_FRAME */

#ifndef __PEWTER_INPUT
#define __PEWTER_INPUT

namespace pewter {
    enum Key {
        VkUnknown     = -1,
        VkNull        = 0,
        VkCtlA        = 1,
        VkCtlB        = 2,
        VkCtlC        = 3,
        VkCtlD        = 4,
        VkCtlE        = 5,
        VkCtlF        = 6,
        VkCtlG        = 7,
        VkCtlH        = 8,
        VkCtlI        = 9,
        VkTab         = VkCtlI,   // '\t'
        VkCtlJ        = 10,   // '\n'
        VkReturn      = 10,
        VkCtlK        = 11,
        VkCtlL        = 12,
        VkCtlM        = 13,   // '\r'
        VkCtlN        = 14,
        VkCtlO        = 15,
        VkCtlP        = 16,
        VkCtlQ        = 17,
        VkCtlR        = 18,
        VkCtlS        = 19,
        VkCtlT        = 20,
        VkCtlU        = 21,
        VkCtlV        = 22,
        VkCtlW        = 23,
        VkCtlX        = 24,
        VkCtlY        = 25,
        VkCtlZ        = 26,
        VkEscape      = 27,
        VkSpace       = ' ',
        VkExclamation = '!',
        VkDoubleQuote = '"',
        VkHash        = '#',
        VkDollar      = '$',
        VkPercent     = '%',
        VkAmpersand   = '&',
        VkSingleQuote = '\'',
        VkLeftParen   = '(',
        VkRightParen  = ')',
        VkStar        = '*',
        VkPlus        = '+',
        VkComma       = ',',
        VkDash        = '-',
        VkDot         = '.',
        VkSlash       = '/',
        VkZero        = '0',
        VkOne         = '1',
        VkTwo         = '2',
        VkThree       = '3',
        VkFour        = '4',
        VkFive        = '5',
        VkSix         = '6',
        VkSeven       = '7',
        VkEight       = '8',
        VkNine        = '9',
        VkColon       = ':',
        VkSemicolon   = ';',
        VkLeftAngle   = '<',
        VkEquals      = '=',
        VkRightAngle  = '>',
        VkQuestion    = '?',
        VkAt          = '@',
        VkUpperA      = 'A',
        VkUpperB      = 'B',
        VkUpperC      = 'C',
        VkUpperD      = 'D',
        VkUpperE      = 'E',
        VkUpperF      = 'F',
        VkUpperG      = 'G',
        VkUpperH      = 'H',
        VkUpperI      = 'I',
        VkUpperJ      = 'J',
        VkUpperK      = 'K',
        VkUpperL      = 'L',
        VkUpperM      = 'M',
        VkUpperN      = 'N',
        VkUpperO      = 'O',
        VkUpperP      = 'P',
        VkUpperQ      = 'Q',
        VkUpperR      = 'R',
        VkUpperS      = 'S',
        VkUpperT      = 'T',
        VkUpperU      = 'U',
        VkUpperV      = 'V',
        VkUpperW      = 'W',
        VkUpperX      = 'X',
        VkUpperY      = 'Y',
        VkUpperZ      = 'Z',
        VkLeftSquare  = '[',
        VkBackslash   = '\\',
        VkRightSquare = ']',
        VkCaret       = '^',
        VkUnderscore  = '_',
        VkBacktick    = '`',
        VkLowerA      = 'a',
        VkLowerB      = 'b',
        VkLowerC      = 'c',
        VkLowerD      = 'd',
        VkLowerE      = 'e',
        VkLowerF      = 'f',
        VkLowerG      = 'g',
        VkLowerH      = 'h',
        VkLowerI      = 'i',
        VkLowerJ      = 'j',
        VkLowerK      = 'k',
        VkLowerL      = 'l',
        VkLowerM      = 'm',
        VkLowerN      = 'n',
        VkLowerO      = 'o',
        VkLowerP      = 'p',
        VkLowerQ      = 'q',
        VkLowerR      = 'r',
        VkLowerS      = 's',
        VkLowerT      = 't',
        VkLowerU      = 'u',
        VkLowerV      = 'v',
        VkLowerW      = 'w',
        VkLowerX      = 'x',
        VkLowerY      = 'y',
        VkLowerZ      = 'z',
        VkLeftCurly   = '{',
        VkPipe        = '|',
        VkRightCurly  = '}',
        VkTilde       = '~',
        VkDel         = 127,
    };

#define _PWT_IS_VALID_INPUT(asc) (asc <= VkDel && !(asc > VkEscape && asc < VkSpace) && asc > VkNull)
}

#endif /* !@__PEWTER_INPUT */
